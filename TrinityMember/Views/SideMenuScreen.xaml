<?xml version="1.0" encoding="UTF-8" ?>
<FlyoutPage
    x:Class="TrinityMember.Views.SideMenuScreen"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:pages1="clr-namespace:TrinityMember.Views"
    ios:FlyoutPage.ApplyShadow="true"
    ios:NavigationPage.HideNavigationBarSeparator="true"
    ios:Page.PrefersHomeIndicatorAutoHidden="true"
    NavigationPage.HasNavigationBar="False">
    <FlyoutPage.Flyout>
        <ContentPage
            Title="Menu"
            BackgroundColor="{DynamicResource WhiteColor}"
            IconImageSource="hamburgermenu.png">
            <ContentPage.Content>
                <Grid BackgroundColor="{x:DynamicResource BackgroundColor}" RowDefinitions="Auto,*" />
            </ContentPage.Content>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages1:LandingScreen />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>
